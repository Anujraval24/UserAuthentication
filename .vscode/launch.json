    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "BABEL_ENV": "debug"
            },
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
            "program": "${workspaceFolder}/src/server.js"
        }
    ]
}